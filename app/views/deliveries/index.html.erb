<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
  </div>
  <p> Know if something gets lost in the mail </p>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="datetime-local" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>

<div class="waiting_on">
  <h2>Waiting on</h2>

  <ul>

    <li>
      <% @list_of_deliveries.each do |the_delivery| %>

        <div>
         <%= the_delivery.description %>
        </div>

        <div style="color: red">
          Supposed to arrive on
          <%= the_delivery.supposed_to_arrive_on %>
        </div>

        <div>
          <%= the_delivery.details %>
        </div>

        <div>
          <form action="/modify_delivery/<%= the_delivery.id%>" method="post">
            <input type="hidden" name="arrived" value="true">

            <button>Mark as received</button>
          </form>
        </div>
      <% end %>
    </li>
  </ul>
</div>

<div class="received">
  <h2>Received</h2>

  <ul>
      <li>
      <% @list_of_deliveries.each do |recieved| %>

        <div> 
          <%= recieved.description %> 
        </div>

        <div>
          <small>
            Updated <%= recieved.updated_at %>

            <a href= "/delete_delivery/<%= recieved.id %>"> Delete </a>
          </small>
        </div>
        
      <% end %>
      </li>
  </ul>
</div>

      